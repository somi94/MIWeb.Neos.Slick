//        @position = 'after site'
//    }
//
//    body.javascripts.slick = Neos.Fusion:Template {
//        templatePath = 'resource://MIWeb.Neos.Slick/Private/Templates/NodeTypes/Carousel.html'
//        sectionName = 'scripts'
//        node = ${node}
//        @position = 'after site'
//    }
}

